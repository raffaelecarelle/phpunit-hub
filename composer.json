{
    "name": "raffaelecarelle/phpunit-hub",
    "description": "A modern web UI for running and analyzing PHPUnit tests.",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Raffaele Carelle",
            "email": "raffaele.carelle@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "symfony/console": "^6.0",
        "symfony/process": "^6.0",
        "react/http": "^1.8",
        "cboden/ratchet": "^0.4.4",
        "react/event-loop": "^1.3",
        "react/child-process": "^0.6.1",
        "ramsey/uuid": "^4.7",
        "symfony/finder": "^6.0",
        "react/filesystem": "^0.1.2",
        "ext-simplexml": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.6|^11.0|^12.0",
        "mikey179/vfsstream": "^1.6",
        "rector/rector": "^2.2",
        "friendsofphp/php-cs-fixer": "^3.90",
        "phpstan/phpstan": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "PHPUnitGUI\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PHPUnitGUI\\Tests\\": "tests/",
            "App\\Tests\\": "vfs://testRootDir/"
        }
    },
    "bin": ["bin/phpunit-hub"],
    "config": {
        "allow-plugins": {
            "wyrihaximus/composer-update-bin-autoload-path": true
        }
    }
}
