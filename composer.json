{
    "name": "raffaelecarelle/phpunit-hub",
    "description": "A modern web UI for running and analyzing PHPUnit tests.",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Raffaele Carelle",
            "email": "raffaele.carelle@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.2",
        "symfony/console": "^6.4|^7.3",
        "symfony/process": "^6.4|^7.3",
        "cboden/ratchet": "^0.4.4",
        "react/event-loop": "^1.3",
        "react/child-process": "^0.6.1",
        "ramsey/uuid": "^4.7",
        "phpunit/phpunit": "^10.6|^11.0|^12.0"
    },
    "require-dev": {
        "rector/rector": "^2.2",
        "friendsofphp/php-cs-fixer": "^3.90",
        "phpstan/phpstan": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "PhpUnitHub\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhpUnitHub\\Tests\\": "tests/"
        }
    },
    "bin": ["bin/phpunit-hub"]
}
